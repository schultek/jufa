{
  "firestore": {
    "rules": "config/firestore.rules",
    "indexes": "config/firestore.indexes.json"
  },
  "storage": {
    "rules": "config/storage.rules"
  },
  "hosting": {
    "public": "hosting",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [ {
      "source": "/*",
      "run": {
        "serviceId": "group-service",
        "region": "europe-west1"
      }
    } ]
  },
  "emulators": {
    "firestore": {
      "host": "0.0.0.0",
      "port": "8082"
    }
  }
}
